<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/tv" android:textSize="24sp"
            android:textColor="@android:color/black" android:layout_marginLeft="32dp" android:layout_marginTop="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/charge_tv" android:textSize="24sp"
            android:textColor="@android:color/black" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv" android:layout_marginLeft="32dp"/>

</android.support.constraint.ConstraintLayout>